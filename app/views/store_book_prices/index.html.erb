<h1>Listing stores</h1>

<table  class='table table-striped table-bordered table-condensed'>

  <thead>
    <tr>
      <th>書籍</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @store_book_prices.each do |store_book_price| %>
      <tr>
        <td><%= store_book_price.store_book.book.name %></td>
        <td><%= store_book_price.store_book.store.name %></td>
        <td><%= store_book_price.store_book.store_book_price.price if store_book_price.store_book.store_book_price.presence  %></td>
        <td><%= link_to 'Edit', edit_store_book_price_path(store_book_price) %></td>
        <td><%= link_to 'Destroy', store_book_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

