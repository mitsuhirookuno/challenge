<%= form_for(@store_book_price) do |f| %>
  <% if @store_book_price.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store_book_price.errors.count, "エラー") %> を修正して下さい:</h2>

      <ul>
      <% @store_book_price.errors.full_messages.each do |msg| %>
        <li><%= msg.gsub(/Price/,'値段') %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label '値段' %><br>
    <%= f.text_field :price %>
  </div>

  <div class="actions">
    <%= f.submit('反映') %>
  </div>

<% end %>
