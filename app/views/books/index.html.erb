<h1>書籍 一覧</h1>

<table class='table table-striped table-bordered table-condensed'>
  <thead>
    <tr>
      <th>名称</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= link_to '参照', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '破棄', book, method: :delete, data: { confirm: '本当に破棄しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

